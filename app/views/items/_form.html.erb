<div>
  <%= simple_form_for(item) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <%= f.input :name %>
        <%= f.input :section %>
        <%= f.input :description %>
        <%= f.input :image %>
        <%= f.input :quantity %>
        <%= f.input :stock %>
        <%= f.button :submit, 'Add', class: "btn btn-primary" %>

    <% end %>
  </div>
